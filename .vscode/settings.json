  //Use the python version from .venv
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python3.12",
  //Make sure terminal always activates the .venv
  "python.terminal.activateEnvironment": true,
  //This is so we use mypy from the .venv
  "mypy.runUsingActiveInterpreter": true,
  "mypy.dmypyExecutable": "${workspaceFolder}/.venv/bin/dmypy",
  //Dont show __pycache__ in the vscode files
  //https://tech.serhatteker.com/post/2022-06/remove_python_pycache_pyc/
  //Would recommend just to set this: `export PYTHONPYCACHEPREFIX="$HOME/.cache/pycache/"` in your .bashrc/.zshrc 
  "files.exclude": {
    "**/__pycache__": true
  },
  "[python]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
      "source.fixAll": "explicit"
    }
  },
  "files.watcherExclude": {
    "**/target": true
  },
  "editor.formatOnSave": true,
  "clang-format.executable": "/opt/homebrew/bin/clang-format"
}